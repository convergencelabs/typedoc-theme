{{#if isVisible}}
    {{#if isLabel}}
        <li class="label {{cssClasses}}">
            <span>{{{wbr title}}}</span>
        </li>
    {{else}}
        {{#if isGlobals}}
            <li class="globals {{#if isInPath}}current{{/if}} {{cssClasses}}">
                <a href="{{relativeURL url}}"><em>Index</em></a>
            </li>
            <li class="modules-label">Modules</li>
        {{else}}
            <li class="{{#if isInPath}}current{{/if}} {{cssClasses}}">
                <span class="tsd-kind-icon"><a href="{{relativeURL url}}">{{{wbr title}}}</a></span>
                {{#if isInPath}}
                    {{#if children}}
                        <ul>
                            {{#each children}}
                                {{> navigation}}
                            {{/each}}
                        </ul>
                    {{/if}}
                {{/if}}
            </li>
        {{/if}}
    {{/if}}
{{/if}}
